<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_service_engineer"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/text_engineer" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_engineer"
        android:id="@+id/image_engineer_signature"
        android:src="@drawable/engineer_signature_stub"
        android:background="@android:color/darker_gray"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_insert"
        android:layout_below="@id/image_engineer_signature"
        android:id="@+id/button_engineer_signature"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_client"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_below="@id/button_engineer_signature"
        android:id="@+id/text_client" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_client"
        android:id="@+id/image_client_signature"
        android:src="@drawable/client_signature_stub"
        android:background="@android:color/darker_gray"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_insert"
        android:layout_below="@id/image_client_signature"
        android:id="@+id/buton_client_signature"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:id="@+id/button_send"
        android:layout_below="@id/buton_client_signature"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>