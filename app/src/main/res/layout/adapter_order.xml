<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorOrderList"
    android:minHeight="?listPreferredItemHeight"
    tools:context=".activities.OrderPageActivity">

    <TextView
        android:id="@+id/order_number"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
        android:gravity="center"
        android:text="252555252"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/order_service_date"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
        android:gravity="center"
        android:text="22-03-2016"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/order_device_type"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
        android:gravity="center"
        android:text="Generator"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/order_task"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
        android:gravity="center"
        android:text="Repair"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/order_address"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
        android:gravity="center"
        android:text="Kiev"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/order_status"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
        android:gravity="center"
        android:text="In progress"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/order_make_pdf"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
        android:layout_marginRight="@dimen/orders_list_horizontal_margin"
        android:gravity="center"
        android:text="PDF"
        android:textAppearance="?android:textAppearanceMedium" />

</LinearLayout>