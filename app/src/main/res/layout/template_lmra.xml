<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLMRASection">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_lmra_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_delete"
                android:layout_alignParentLeft="true"
                android:background="@color/colorLoginGroup"/>

            <TextView
                android:id="@+id/title_lmra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/lmra_text_sample"
                style="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textColor="@color/colorLoginGroup"/>

            <Button
                android:id="@+id/button_lmra_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_save"
                android:layout_alignParentRight="true"
                android:background="@color/colorLoginGroup"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/description_lmra"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                style="?android:textAppearanceLarge"
                android:layout_weight=".7"/>
            <ImageSwitcher
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:background="@android:drawable/ic_menu_camera"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>