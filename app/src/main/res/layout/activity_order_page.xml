<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrderPageActivity">

    <LinearLayout
        android:id="@+id/order_page_engineer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrderPageHeader"
        android:minHeight="?listPreferredItemHeightSmall"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:textAppearanceMedium">

        <TextView
            android:id="@+id/service_engenieer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/service_engenieer" />

        <TextView
            android:id="@+id/service_engenieer_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            tools:text="Engineer name" />

        <Button
            android:id="@+id/service_engenieer_logout_button"
            style="?android:attr/imageButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_logout"
            android:textColor="@color/colorOrderListHeader" />
    </LinearLayout>

    <Space
        android:id="@+id/order_page_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_orders_space"
        android:layout_below="@id/order_page_engineer_name"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/order_page_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_page_space"
        android:background="@color/colorOrderPageHeader"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:textAppearanceMedium">

        <TextView
            android:id="@+id/orders_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="@string/orders" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="?listPreferredItemHeightSmall"
            android:layout_marginBottom="@dimen/activity_orders_space"
            android:layout_marginTop="@dimen/activity_orders_space"
            android:layout_weight="0.5"
            android:background="@color/colorTextField"
            android:inputType="text"
            android:maxLines="1"
            android:orientation="horizontal"
            android:singleLine="true" />

    </LinearLayout>

    <Space
        android:id="@+id/order_page_space2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_orders_space"
        android:layout_below="@id/order_page_search"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/order_page_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_page_space2"
        android:background="@color/colorOrderListHeader"
        android:minHeight="?listPreferredItemHeightSmall"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:textAppearanceSmall">

        <TextView
            android:id="@+id/order_number_header"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="96dp"
            android:layout_width="wrap_content"
            android:text="@string/order_number" />

        <TextView
            android:id="@+id/order_service_date_header"
            android:layout_weight="1"
            android:minWidth="96dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
            android:gravity="center"
            android:text="@string/date" />

        <TextView
            android:id="@+id/order_device_type_header"
            android:layout_weight="1"
            android:minWidth="96dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
            android:gravity="center"
            android:text="@string/device_type" />

        <TextView
            android:id="@+id/order_task_header"
            android:layout_weight="1"
            android:minWidth="96dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
            android:gravity="center"
            android:text="@string/task" />

        <TextView
            android:id="@+id/order_address_header"
            android:layout_weight="1"
            android:minWidth="96dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
            android:gravity="center"
            android:text="@string/address" />

        <TextView
            android:id="@+id/order_status_header"
            android:layout_weight="1"
            android:minWidth="96dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
            android:gravity="center"
            android:text="@string/status" />

        <TextView
            android:id="@+id/order_make_pdf_header"
            android:minWidth="64dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/orders_list_horizontal_margin"
            android:layout_marginRight="@dimen/orders_list_horizontal_margin"
            android:gravity="center" />

    </LinearLayout>

    <Space
        android:id="@+id/order_page_space3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_orders_space"
        android:layout_below="@id/order_page_list_header"
        android:background="@color/colorPrimary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/orders_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order_page_space3"
        android:scrollbars="vertical" />

</RelativeLayout>
