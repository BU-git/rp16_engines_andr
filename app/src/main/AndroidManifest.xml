<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bionic.kvt.serviceapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Session"
        android:allowBackup="false"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ForgetPasswordActivity" />
        <activity android:name=".activities.OrderPageActivity" />
        <activity android:name=".activities.OrderPageDetailActivity" />
        <activity android:name=".activities.PDFReportActivity" />
        <activity android:name=".activities.OrderProcessingFirstStageActivity" />
        <activity android:name=".activities.LMRAActivity" />
        <activity android:name=".activities.ComponentDefectsActivity" />
        <activity android:name=".activities.MeasurementsActivity" />
        <activity android:name=".activities.NSAActivity" />
        <activity
            android:name=".activities.InsertSignaturesActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".activities.DebugActivity" />

        <service android:name=".db.LocalService" />
    </application>

</manifest>
